<div class="container-fluid">
  <div class="posts well">
    <h2>Title: <%= @post.title %></h2>
    <p><%= @post.body %></p>
    <% if current_user %>
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" if policy(@post).update? %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" if policy(@post).destroy? %>
    <% end %>
  </div>

  <div class="well">
    <h3>Comments:</h3>
    <%= render 'comments/comment' %>
    <% if current_user %>
      <h4>Add Comment</h4>
      <%= render 'comments/form' %>
    <% end %>
  </div>
</div>
